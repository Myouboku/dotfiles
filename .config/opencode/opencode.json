{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "serena-plan": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--enable-web-dashboard",
        "false",
        "--context",
        "ide-assistant",
        "--mode",
        "planning"
      ],
      "enabled": false
    },
    "serena-build": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--enable-web-dashboard",
        "false",
        "--context",
        "ide-assistant",
        "--mode",
        "editing"
      ],
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  },
  "tools": {
    "serena-*": false
  },
  "agent": {
    "plan": {
      "tools": {
        "serena-plan": true
      }
    },
    "build": {
      "tools": {
        "serena-build": true
      },
      "permission": {
        "bash": {
          "git *": "ask",
          "git log": "allow",
          "git diff": "allow",
          "git commit": "deny",
          "rm *": "ask",
          "jq": "allow"
        }
      }
    }
  }
}
