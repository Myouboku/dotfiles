{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "browsermcp": {
      "type": "local",
      "command": ["npx", "-y", "@browsermcp/mcp@latest"]
    }
  },
  "agent": {
    "build": {
      "permission": {
        "bash": {
          "git *": "ask",
          "git log": "allow",
          "git diff": "allow",
          "git commit": "deny",
          "rm *": "ask",
          "jq": "allow"
        }
      }
    }
  }
}
