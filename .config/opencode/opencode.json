{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["@mohak34/opencode-notifier@latest"],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "browsermcp": {
      "type": "local",
      "command": ["npx", "-y", "@browsermcp/mcp@latest"]
    }
  },
  "permission": {
    "bash": {
      "git commit *": "ask",
      "git push *": "ask",
      "git stash *": "ask",
      "git reset *": "ask",
      "rm *": "ask"
    }
  }
}
